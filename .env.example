# Frontend Environment Variables Template
# Copy this file to .env and fill in your values

# =================================
# API Configuration
# =================================
VITE_API_URL=http://localhost:5000/api
VITE_SOCKET_URL=http://localhost:5000

# =================================
# Development Settings
# =================================
VITE_ENV=development
VITE_DEBUG=true

# =================================
# Analytics (Optional)
# =================================
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX
# VITE_HOTJAR_ID=your-hotjar-id

# =================================
# Payment Gateway (Demo Mode)
# =================================
# VITE_MIDTRANS_CLIENT_KEY=your-midtrans-client-key
# VITE_PAYMENT_DEMO_MODE=true

# =================================
# Social Media Integration (Optional)
# =================================
# VITE_FACEBOOK_APP_ID=your-facebook-app-id
# VITE_GOOGLE_CLIENT_ID=your-google-client-id

# =================================
# CDN and Assets (Optional)
# =================================
# VITE_CDN_URL=https://cdn.yourdomain.com
# VITE_ASSETS_URL=https://assets.yourdomain.com

# =================================
# Feature Flags (Optional)
# =================================
# VITE_ENABLE_CHAT=true
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_PWA=false

# =================================
# Regional Settings
# =================================
VITE_DEFAULT_LANGUAGE=id
VITE_DEFAULT_CURRENCY=IDR
VITE_DEFAULT_TIMEZONE=Asia/Makassar

# =================================
# External Services (Optional)
# =================================
# VITE_MAP_API_KEY=your-google-maps-api-key
# VITE_WEATHER_API_KEY=your-weather-api-key
